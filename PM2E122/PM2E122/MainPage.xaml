<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E122.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Agenda de Ubicaciones" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"></Label>
        </Frame>
        <Label x:Name="latitud"></Label>
        <Label x:Name="longitud"></Label>
        <Button x:Name="btnAddLocation" Text="Agregar ubicacion" VerticalOptions="Center" HorizontalOptions="Center" Clicked="btnAddLocation_Clicked"></Button>
        <Button x:Name="btnListLocation" Text="Lista Ubicaciones" VerticalOptions="Center" HorizontalOptions="Center" Clicked="btnListLocation_Clicked"></Button>
    </StackLayout>

</ContentPage>
